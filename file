pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'NodeJS' // Replace with the NodeJS installation name
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Priyankapawar9511/react1.git' // Replace with your repo URL
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test React App') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Example deployment step (modify as needed)
                sh 'cp -r build /var/www/html/react-app'
            }
        }
    }

    post {
        success {
            echo 'Build and Deployment Successful!'
        }
        failure {
            echo 'Build Failed!'
        }
    }
}
